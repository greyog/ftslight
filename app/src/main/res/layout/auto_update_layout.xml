<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/appbar_padding_top">
    <Switch
        android:id="@+id/swAutoUpd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_auto_update"
        android:padding="@dimen/appbar_padding_top"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_auto_update_time"
            android:paddingStart="@dimen/appbar_padding_top"
            android:labelFor="@id/etAutoUpd"
            android:paddingLeft="@dimen/appbar_padding_top" />

        <EditText
            android:id="@+id/etAutoUpd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_margin="@dimen/appbar_padding_top"
            />
    </LinearLayout>

</LinearLayout>